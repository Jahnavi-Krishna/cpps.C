#include<stdio.h>
struct fraction
{
        int num;
        int den;
};
void get_fraction( struct fraction f)
{
        printf("Enter the numerator");
        scanf("%d",&f->num);
        printf("Enter the denomirator");
        scanf("%d",&f->den);
}
void show_fraction( struct fraction f)
{
        printf("%d%d\n",f.num,f.den);
}
int main()
{
        struct fraction f;
        get_fraction(&f);
        show_fraction(f);
        return 0;
}
