#include<stdio.h>
int number()
{
	int num;
	printf("How many numbers do you want to add?");
	scanf("%d",&num);
	return num;
}
int input(int nu)
{
	int b[nu];
	printf("Enter the numbers\n");
	for(int i=0;i<nu;i++)
		scanf("%d",&b[i]);
	return b[nu];

}
int compute(int numb,int c[numb])
{
	int s=0;
	for(int i=0;i<numb;i++)
		s=s+c[i];
	return s;
}
void output(int s)
{
	printf("The total sum is =%d",s);
}
int main()
{
	int n,sum=0;
	n=number();
	int a[n];
	a[n]=input(n);
	sum=compute(n,a[n]);
	output(sum);
}




